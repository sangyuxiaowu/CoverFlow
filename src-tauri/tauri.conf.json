{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CoverFlow",
  "version": "3.5.1",
  "identifier": "com.sangyuxiaowu.coverflow",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev -- --mode tauri",
    "beforeBuildCommand": "npm run build -- --mode tauri"
  },
  "app": {
    "windows": [
      {
        "title": "CoverFlow",
        "width": 1280,
        "height": 800
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/icon.png",
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "fileAssociations": [
      {
        "ext": [
          "cfj"
        ],
        "name": "CoverFlow Project",
        "description": "CoverFlow project file",
        "mimeType": "application/x-coverflow-project",
        "role": "Editor"
      }
    ]
  }
}
